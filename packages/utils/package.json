{
  "name": "@supergrowthai/utils",
  "version": "1.0.1",
  "description": "Common utility classes and functions for SupergrowthAI projects",
  "repository": "git+https://github.com/captadexp/next-blog.git",
  "homepage": "https://github.com/captadexp/next-blog/tree/main#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "./Logger": {
      "types": "./dist/utility-classes/Logger.d.ts",
      "import": "./dist/utility-classes/Logger.mjs",
      "require": "./dist/utility-classes/Logger.js"
    },
    "./LockManager": {
      "types": "./dist/utility-classes/LockManager.d.ts",
      "import": "./dist/utility-classes/LockManager.mjs",
      "require": "./dist/utility-classes/LockManager.js"
    },
    "./ShutdownManager": {
      "types": "./dist/utility-classes/ShutdownManager.d.ts",
      "import": "./dist/utility-classes/ShutdownManager.mjs",
      "require": "./dist/utility-classes/ShutdownManager.js"
    },
    "./content-transformers": {
      "types": "./dist/content-transformers/index.d.ts",
      "import": "./dist/content-transformers/index.mjs",
      "require": "./dist/content-transformers/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "bun test --bail --reporter=junit --reporter-outfile=./tests-report.xml",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "author": "Capt ADExp <tech@developer.toys>",
  "license": "MIT",
  "dependencies": {
    "memoose-js": "2.0.2",
    "@supergrowthai/next-blog-types": "workspace:*",
    "htmlparser2": "^10.0.0",
    "domhandler": "^5.0.3",
    "dom-serializer": "^2.0.0"
  },
  "devDependencies": {
    "@editorjs/editorjs": "^2.31.1",
    "@smithy/types": "^4.12.0",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.9",
    "typescript": "^5.9.2",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  },
  "trustedDependencies": [
    "geolite2"
  ],
  "publishConfig": {
    "access": "public"
  }
}