{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env"
  ],
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:after-build": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "publint": {
      "dependsOn": [
        "build",
        "typecheck"
      ],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test-app#build": {
      "dependsOn": [
        "@supergrowthai/next-blog#build",
        "@supergrowthai/next-blog-ui#build",
        "^build"
      ],
      "outputs": [
        ".next/**"
      ],
      "env": [
        "MONGO_DB_URL",
        "VERCEL"
      ]
    },
    "@plugins/*#build": {
      "dependsOn": [
        "@supergrowthai/plugin-dev-kit#build",
        "^build"
      ]
    },
    "@supergrowthai/next-blog#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "@supergrowthai/tq#typecheck": {
      "dependsOn": [
        "@supergrowthai/mq#build",
        "^build"
      ]
    }
  }
}