{
  "name": "@supergrowthai/next-blog-workspace",
  "version": "1.0.0",
  "description": "Workspace for next-blog packages",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "plugins/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build --filter='./packages/*'",
    "dev": "turbo build --filter='./packages/*' && turbo dev --filter='./packages/*'",
    "dev:fast": "turbo dev --filter='./packages/*'",
    "clean": "turbo clean --filter='./packages/*'",
    "typecheck": "turbo typecheck --filter='./packages/*'",
    "app:dev": "turbo dev --filter='./apps/test-app'",
    "app:build": "turbo build --filter='./apps/test-app'"
  },
  "keywords": [
    "vite",
    "nextjs",
    "react",
    "cms",
    "blogging",
    "headless-cms",
    "next-js",
    "secure"
  ],
  "dependencies": {
    "rimraf": "^6.0.1",
    "vite": "^7.1.12"
  },
  "author": "Capt ADExp <tech@developer.toys>",
  "license": "MIT",
  "packageManager": "bun@1.2.23",
  "devDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251027.1",
    "jsdom": "^27.0.1",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "bun",
    "esbuild",
    "sharp"
  ]
}